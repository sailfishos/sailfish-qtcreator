<externaltool id="lupdate">
    <description>Synchronizes translator's ts files with the program code</description>
    <displayname>Update Translations (lupdate)</displayname>
    <category>Linguist</category>
    <order>1</order>
    <executable output="showinpane" error="showinpane" modifiesdocument="no">
        <path>%{mer:merssh}</path>
        <path>merssh</path>
        <arguments>lupdate %{CurrentProject:FilePath}</arguments>
        <workingdirectory>%{CurrentProject:Path}</workingdirectory>
        <environment>MER_SSH_PORT%3D%25%7Bmer%3Asshport%7D;MER_SSH_PRIVATE_KEY%3D%25%7Bmer%3Aprivatekeyfile%7D;MER_SSH_SHARED_HOME%3D%25%7Bmer%3Asharedhome%7D;MER_SSH_USERNAME%3D%25%7Bmer%3Asshuser%7D</environment>
    </executable>
</externaltool>
